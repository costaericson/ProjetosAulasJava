package Application;

import java.util.Locale;
import java.util.Scanner;

import Entidadeds.Produto;

public class ProdutoEstoque {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner in = new Scanner(System.in);
		Produto p1 = new Produto();
		
		
		System.out.println("Escreva o nome, preço e quantidade de itens deseja adicionar: ");
		p1.nome = in.next();
		p1.preco = in.nextDouble();
		p1.quantidade = in.nextInt();
		
		System.out.printf("Informaçãoe: %s, R$ %.2f, %d unidades, Total: %.2f \n", p1.nome,p1.preco, p1.quantidade, p1.ValorTotalemEstoque());
		
		System.out.print("Gostaria de adicionar uma quantidade? S/N");
		String escolha = in.next();
		
		if(escolha.equalsIgnoreCase("S")) {
			System.out.print("Quanto gostaria de adicionar? ");
			int add = in.nextInt();
			p1.AddProduto(add);			
		}
		System.out.printf("Informaçãoe Atualizadas: %s, R$ %.2f, %d unidades, Total: %.2f \n", p1.nome,p1.preco, p1.quantidade, p1.ValorTotalemEstoque());
		System.out.print("Gostaria de remover uma quantidade? S/N");
		escolha = in.next();
		
		if(escolha.equalsIgnoreCase("S")) {
			System.out.print("Quanto gostaria de remover? ");
			int add = in.nextInt();
			p1.RemoveProduto(add);			
		}
		System.out.println("o valor total deu: "+p1.ValorTotalemEstoque());
		
		
		
		
		
		in.close();
	}

}
